<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/target_audience_content"
    android:background="@drawable/team_item_circle"
    android:layout_height="150dp">
    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <android.support.v7.widget.AppCompatButton
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:text="@string/plus_sign"
            android:textSize="40sp"
            android:textColor="#ec3f26"
            android:backgroundTint="#fff"
            android:gravity="center"
            android:layout_weight="4.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginStart="5dp"
            app:pressedTranslationZ="12dp"
            android:id="@+id/item_create_element"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:background="@drawable/team_item_circle"
            android:id="@+id/input_layout_target_audience"
            android:backgroundTint="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TextInputLayout
                android:backgroundTint="#fff"
                android:textColorHint="#ec3f26"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.TextInputEditText
                    android:focusableInTouchMode="true"
                    android:id="@+id/input_age"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="2"
                    app:backgroundTint="#ec3f26"
                    android:textSize="20sp"
                    android:textColor="#ec3f26"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/age_text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.v7.widget.AppCompatSpinner
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <android.support.design.widget.TextInputLayout
                android:backgroundTint="#fff"
                android:textColorHint="#ec3f26"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.TextInputEditText
                    android:focusableInTouchMode="true"
                    android:id="@+id/input_occupation"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="23"
                    app:backgroundTint="#ec3f26"
                    android:textSize="20sp"
                    android:textColor="#ec3f26"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/occupation_text"/>
            </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:backgroundTint="#fff"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="75dp"
        android:background="@drawable/team_item_circle"
        android:layout_height="75dp">
        <android.support.design.widget.TextInputLayout
            android:backgroundTint="#fff"
            android:textColorHint="#ec3f26"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TextInputEditText
                android:focusableInTouchMode="true"
                android:id="@+id/input_education"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="23"
                app:backgroundTint="#ec3f26"
                android:textSize="20sp"
                android:textColor="#ec3f26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/education_text"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:backgroundTint="#fff"
            android:textColorHint="#ec3f26"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TextInputEditText
                android:focusableInTouchMode="true"
                android:id="@+id/input_income"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="23"
                app:backgroundTint="#ec3f26"
                android:textSize="20sp"
                android:textColor="#ec3f26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/income_text"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>