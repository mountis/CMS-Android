<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="-20dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.AppCompatButton
        android:layout_weight="0"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="a"
        android:background="@drawable/circle"
        android:clickable="false"
        android:id="@+id/item_icon_letter_moniker"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/item_label_chat_display_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:textSize="20sp"
            android:text="@string/chat_name_text"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_weight="1"
            android:id="@+id/item_label_last_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#bcbcbc"
            android:maxLines="1"
            android:visibility="gone"
            android:gravity="top"
            android:textSize="15sp"
            android:text="@string/last_message_text"
            android:textAppearance="?attr/textAppearanceListItem"/>

        </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_label_last_message_sent_stamp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:textColor="#202020"
        android:paddingTop="12dp"
        android:maxLines="1"
        android:gravity="right|top"
        android:textSize="15sp"
        android:text="@string/last_message_sent_stamp_text"
        android:textAppearance="?attr/textAppearanceListItem"/>

</android.support.v7.widget.LinearLayoutCompat>