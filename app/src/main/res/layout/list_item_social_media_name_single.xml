<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/team_item_circle"
    android:layout_height="75dp">

    <android.support.v7.widget.AppCompatButton
        android:background="@drawable/circle"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:text="+"
        android:textSize="40dp"
        android:id="@+id/item_create_element"
        android:textColor="#ec3f26"
        android:backgroundTint="#fff"
        android:layout_height="50dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:id="@+id/input_layout_social_media_name"
        android:backgroundTint="#fff"
        android:textColorHint="#5e190f"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:focusableInTouchMode="true"
            android:id="@+id/input_social_media_name"
            android:inputType="text"
            android:maxLines="1"
            android:backgroundTint="#ffffff"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/social_media_name_text"/>
    </android.support.design.widget.TextInputLayout>

</android.support.v7.widget.LinearLayoutCompat>