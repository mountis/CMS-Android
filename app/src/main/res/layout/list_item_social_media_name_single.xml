<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/social_media_name_content"
    android:background="@drawable/team_item_circle"
    android:layout_height="75dp">

    <android.support.v7.widget.AppCompatButton
        android:background="@drawable/circle"
        android:layout_gravity="center"
        android:text="+"
        android:textSize="40dp"
        android:textColor="#ec3f26"
        android:backgroundTint="#fff"
        android:gravity="center"
        android:layout_weight="4.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginLeft="5dp"
        app:pressedTranslationZ="12dp"
        android:id="@+id/item_create_element"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_weight="1"
        android:background="@drawable/team_item_circle"
        android:id="@+id/input_layout_social_media_name"
        android:backgroundTint="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:backgroundTint="#fff"
            android:textColorHint="#ec3f26"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:focusableInTouchMode="true"
                android:id="@+id/input_social_media_name"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="23"
                app:backgroundTint="#ec3f26"
                android:textSize="15sp"
                android:textColor="#ec3f26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/social_media_name_text"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>