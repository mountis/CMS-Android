<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marionthefourth.augimas.fragments.TeamManagementFragment"
    tools:showIn="@layout/activity_team_management">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/no_team_layout"
        android:visibility="gone"
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_create_team"
            style="@style/ButtonTheme"
            android:text="@string/sign_in_text_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatTextView
            android:text="or"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_join_team"
            style="@style/ButtonTheme"
            android:text="@string/sign_in_text_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/in_team_layout"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="395dp"
        android:layout_height="531dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:focusableInTouchMode="true"
                android:id="@+id/input_team_name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/team_name_text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_team_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:focusableInTouchMode="true"
                android:id="@+id/input_team_username"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username_text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_update_team_info"
            style="@style/ButtonTheme"
            android:text="@string/update_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/team_member_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager"
            android:fitsSystemWindows="true"
            tools:context="com.marionthefourth.augimas.fragments.TeamManagementFragment"
            tools:listitem="@layout/list_item_team_member" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_invite_member"
            style="@style/ButtonTheme"
            android:text="@string/invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>
