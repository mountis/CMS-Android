<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2195f2</item>
        <item name="colorPrimaryDark">#0068bf</item>
        <item name="colorAccent">#01579b</item>
        <item name="colorButtonNormal">#01579b</item>
        <item name="android:colorSecondary">#01579b</item>
    </style>

    <style name="AppTheme.ProgressDialog">
        <item name="android:textColor">#01579b</item>
        <item name="android:progressBackgroundTint">#2195f2</item>
    </style>

    <style name="ButtonTheme" parent="AppTheme">
        <item name="android:textColor">#fff</item>

    </style>

    <style name="NoBackgroundButtonTheme" parent="AppTheme">
        <item name="android:textColor">#01579b</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoBackgroundDialogTheme" parent="NoBackgroundButtonTheme">
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">

        <!--<item name="android:background">#E0DBE1</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
