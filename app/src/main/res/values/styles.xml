<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#31aee2</item>
        <item name="colorPrimaryDark">#278cb6</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:windowBackground">@color/backgroundMain</item>
        <item name="colorAccent">#fc5830</item>
        <item name="colorButtonNormal">#fc5830</item>
        <item name="android:colorSecondary">#31aee2</item>
        <item name="android:navigationBarColor">#31aee2</item>
    </style>

    <style name="AppTheme.ProgressDialog">
        <item name="android:textColor">#212121</item>
        <item name="android:progressBackgroundTint">#fc5830</item>
    </style>

    <style name="ButtonTheme" parent="AppTheme">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="NoBackgroundButtonTheme" parent="AppTheme">
        <item name="android:textColor">#9d371e</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoBackgroundDialogTheme" parent="NoBackgroundButtonTheme">
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">

        <!--<item name="android:background">#E0DBE1</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
